extends layout

block content
  h1 All messages
  ul
    each message in messageList
      li.messageList
        p.messageListFirstChild #{message.title}
        p.messageListSecondChild #{message.text}
        p.messageListThirdChild
          i.messageListFourthChild #{message.username},
          | #{message.timestamp_formatted}
        if user && user.admin === true
          p
            a.btn.btn-primary(href='/members-only/messages/' + message._id + '/delete', role='button') Delete

  br
